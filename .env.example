# Database Configuration
POSTGRES_USER=scraper
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://scraper:your_secure_password_here@localhost:5432/news_scrapers

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Proxy Configuration (optional)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Scraper Settings
REQUEST_DELAY=1.5
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2
MAX_CONCURRENT=10

# Output Configuration
OUTPUT_DIR=data
LOG_LEVEL=INFO

# Backfill Configuration (optional)
# BACKFILL_START_DATE=2003-01-01
BACKFILL_BATCH_SIZE=7
